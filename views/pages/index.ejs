<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Concordia 2 Google</title>
  <!--<link rel="stylesheet" href="css/styles.css?v=1.0"> -->
  <!-- Latest compiled and minified CSS -->

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


<!-- JavaScript -->
<script src="//cdn.jsdelivr.net/alertifyjs/1.8.0/alertify.min.js"></script>

<!-- CSS -->
<link rel="stylesheet" href="//cdn.jsdelivr.net/alertifyjs/1.8.0/css/alertify.min.css"/>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <style></style>
</head>

<body>
  <div class="container">
    <div class="row col-lg-6">
      <h1> Concordia 2 Google</h1>
   <a href="<%= authUrl %>" class="btn btn-danger btn-block">Login with Google+</a>
    <% if (result !== '') {%>
    <form action="/createcalendar" method="post" id="form">
      <div class="form-group">
        <label for="exampleInputEmail1">Calendar data</label>
        <textarea class="form-control" rows="30" id="calendar" name="test" ></textarea>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    <% } %>

  </form>
  </div>
  <script type="text/javascript">
    var code = '<%= result %>';
    $( "#form" ).submit(function(e) {
      e.preventDefault();
      $.ajax({
        url:'/createcalendar',
        type:"POST",
        data:JSON.stringify({calendar: $('#calendar').val(), code: code}),
        contentType:"application/json",
        dataType:"json",
        success: function(result){
          alertify
          .alert('Successfully added the Concordia Calendar to your Gmail', function(){
              document.location.href="/";
            });
        },
        error: function(err) {
          console.log(err);
        }
      });
    });
  </script>
</body>
</html>